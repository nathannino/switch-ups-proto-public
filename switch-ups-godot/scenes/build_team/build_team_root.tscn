script/source = "extends VBoxContainer

@export var summary : Node

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	for child in get_children() :
		child.reset()
		child.pressed_option.connect(func(index : int) : _on_button_pressed(index, child.current_spirit))
	var temp_child = get_child(0)
	temp_child.set_monster(ms_spirit_active.from_spirit(SpiritDictionary.spirits[\"placeholder\"]),[\"Summary\",\"Change\"])

func _on_button_pressed(index : int, active_spirit : ms_spirit_active) :
	match index :
		-1 :
			summary.set_empty()
		0 :
			summary.set_summary_active(active_spirit)
		1 : 
			summary.set_empty()
"

