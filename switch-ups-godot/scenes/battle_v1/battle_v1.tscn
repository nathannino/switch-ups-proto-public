[sub_resource type="GDScript" id="GDScript_r1x23"]
script/source = "extends Control

@export_category(\"Anchors\")
@export var left_control : Control
@export var center_control : Control
@export var right_control : Control

@export_category(\"Buttons\")
@export var left_button : Button
@export var right_button : Button


enum POSITION {
	LEFT,
	CENTER,
	RIGHT,
}

var spirit_position = POSITION.CENTER

func _goto_pos(_position : POSITION) :
	spirit_position = _position
	get_parent().remove_child(self)
	match _position :
		POSITION.LEFT :
			left_control.add_child(self)
			
			left_button.modulate = Color(0,0,0,0)
			left_button.disabled = true
			
			right_button.modulate = Color.WHITE
			right_button.disabled = false
		POSITION.CENTER :
			center_control.add_child(self)
			
			left_button.modulate = Color.WHITE
			left_button.disabled = false
			
			right_button.modulate = Color.WHITE
			right_button.disabled = false
		POSITION.RIGHT :
			right_control.add_child(self)
			
			left_button.modulate = Color.WHITE
			left_button.disabled = false
			
			right_button.modulate = Color(0,0,0,0)
			right_button.disabled = true

func reset_center() :
	_goto_pos(POSITION.CENTER)

func left() :
	match spirit_position :
		POSITION.LEFT :
			_goto_pos(POSITION.RIGHT)
		POSITION.CENTER :
			_goto_pos(POSITION.LEFT)
		POSITION.RIGHT :
			_goto_pos(POSITION.CENTER)

func right() :
	match spirit_position :
		POSITION.LEFT :
			_goto_pos(POSITION.CENTER)
		POSITION.CENTER :
			_goto_pos(POSITION.RIGHT)
		POSITION.RIGHT :
			_goto_pos(POSITION.LEFT)
"

