script/source = "extends Button

@export var battle_root : Control

func _ready() -> void:
	ClientWrapperAutoload.hide_cancel.connect(func (_hide) :
		visible = not _hide
	)

func _on_pressed() -> void:
	ClientWrapperAutoload.send(TcpPayload.new().set_type(TcpPayload.TYPE.BATTLE_AWAIT_ENDTURN).set_content(false))
	battle_root.begin_turn()
"

